<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.yangdxg.mydrawer.MenuDrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 内容区 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/fake" />


        <!--侧滑区域  LinearLayout    ColorDrawable -->
        <com.yangdxg.mydrawer.MenuContentLayout
            android:id="@+id/contentlayout"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorPrimaryDark"
            app:maxTranslationX="66dp">

            <TextView
                style="@style/MenuText"
                android:layout_marginTop="50dp"
                android:drawableLeft="@mipmap/circle"
                android:onClick="test"
                android:text="朋友圈" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/wallet"
                android:onClick="test"
                android:text="钱包" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/coupon"
                android:onClick="test"
                android:text="优惠券" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/coupon"
                android:onClick="test"
                android:text="优惠券" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/coupon"
                android:onClick="test"
                android:text="优惠券" />
        </com.yangdxg.mydrawer.MenuContentLayout>


    </com.yangdxg.mydrawer.MenuDrawerLayout>

</RelativeLayout>
